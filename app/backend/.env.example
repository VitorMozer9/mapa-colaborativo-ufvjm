# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================

# Porta onde o servidor vai rodar
PORT=3000

# Ambiente: development (desenvolvimento) ou production (produção)
NODE_ENV=development

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================

# Endereço do banco (localhost = seu computador)
DB_HOST=localhost

# Porta padrão do PostgreSQL
DB_PORT=5432

# Nome do banco de dados
DB_NAME=ufvjm_map

# Usuário do banco
DB_USER=postgres

# Senha do banco (MUDE ISSO!)
DB_PASSWORD=postgres

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA (JWT)
# ========================================

# Chave secreta para gerar tokens (MUDE ISSO!)
JWT_SECRET=pokemon_go_2

# Tempo de expiração do token
# Exemplos: 1h (1 hora), 7d (7 dias), 30m (30 minutos)
JWT_EXPIRES_IN=7d

# ========================================
# CONFIGURAÇÕES DE CORS
# ========================================

# Endereço do frontend que pode acessar a API
# Em desenvolvimento, geralmente é localhost
CORS_ORIGIN=http://localhost:8080